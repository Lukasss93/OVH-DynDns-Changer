<Window x:Class="OVHDD.Windows.NewProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OVHDD.Windows"
        mc:Ignorable="d"
        Title="Add new profile" Width="300" ResizeMode="NoResize" SizeToContent="Height" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="lb_newprofile" Text="Enter a profile name" Margin="0,0,0,5" />
            <TextBox x:Name="tb_newprofile" Margin="0,0,0,10" Height="22"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="bt_save" Content="Save" Margin="0,0,5,0" Height="22"/>
                <Button x:Name="bt_cancel" Content="Cancel" Grid.Column="1" Margin="5,0,0,0" Height="22" />
            </Grid>
            
        </StackPanel>
    </Grid>
</Window>
